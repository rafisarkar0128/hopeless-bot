{
  "name": "hopeless-bot",
  "version": "3.2.0",
  "description": "A discord music bot build with lavalink.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "shard": "node src/shard.js",
    "devShard": "nodemon src/shard.js",
    "lint": "pnpx eslint --config eslint.config.js src",
    "format": "pnpx prettier --write .",
    "clearGlobal": "node scripts/clearGlobal.js",
    "clearGuild": "node scripts/clearGuild.js",
    "fetchEmojis": "node scripts/fetchEmojis.js"
  },
  "keywords": [
    "bot",
    "discord",
    "discord-bot",
    "javascript",
    "nodejs",
    "music-bot",
    "lavalink",
    "music",
    "lavalink-musicbot"
  ],
  "author": "rafisarkar0128",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafisarkar0128/hopeless-bot.git"
  },
  "bugs": {
    "url": "https://github.com/rafisarkar0128/hopeless-bot/issues"
  },
  "homepage": "https://github.com/rafisarkar0128/hopeless-bot#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "undici": "^7.19.1"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "figures": "^6.1.0",
    "genius-lyrics": "^4.4.7",
    "glob": "^13.0.0",
    "i18next": "^25.8.0",
    "i18next-fs-backend": "^2.6.1",
    "lavalink-client": "^2.7.8",
    "luxon": "^3.7.2",
    "module-alias": "^2.2.3",
    "mongodb": "^7.0.0",
    "readline": "^1.3.0",
    "table": "^6.9.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.1.0",
    "utf-8-validate": "^6.0.6",
    "zlib-sync": "^0.1.10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "utf-8-validate",
      "zlib-sync"
    ]
  },
  "_moduleAliases": {
    "@root": ".",
    "@src": "src/",
    "@lib": "src/lib/",
    "@database": "src/database/",
    "@utils": "src/utils/",
    "@handlers": "src/handlers/",
    "@helpers": "src/helpers/",
    "@resources": "src/resources/",
    "@structures": "src/structures/"
  }
}
