  "main": "src/index.js",
  "_moduleAliases": {
    "@root": ".",
    "@src": "src/",
    "@lib": "src/lib/",
    "@config": "src/config/",
    "@structures": "src/structures/",
    "@handlers": "src/handlers/",
    "@helpers": "src/helpers/",
    "@schemas": "src/schemas/",
    "@commands": "src/commands/",
    "@assets": "src/assets/",
    "@events": "src/events/"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
