{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@utils/*": ["./src/utils/*"],
      "@database/*": ["./src/database/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@handlers/*": ["./src/handlers/*"],
      "@resources/*": ["./src/resources/*"],
      "@structures/*": ["./src/structures/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
