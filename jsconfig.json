{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@config/*": ["./src/config/*"],
      "@structures/*": ["./src/structures/*"],
      "@handlers/*": ["./src/handlers/*"],
      "@commands/*": ["./src/commands/*"],
      "@assets/*": ["./src/assets/*"],
      "@events/*": ["./src/events/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@schemas/*": ["src/schemas/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
